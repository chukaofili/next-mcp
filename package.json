{
  "name": "next-mcp",
  "version": "1.0.0",
  "description": "MCP server for scaffolding Next.js applications with Docker support",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "next-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "pnpm run build",
    "test": "echo \"No tests yet\" && exit 0",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2"
  },
  "devDependencies": {
    "@eslint/css": "^0.11.1",
    "@eslint/js": "^9.36.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.3.0",
    "@types/node": "^24.5.2",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "typescript": "^5",
    "typescript-eslint": "^8.44.1"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "engines": {
    "node": ">=24",
    "pnpm": ">=10"
  },
  "keywords": [
    "mcp",
    "nextjs",
    "scaffolding",
    "docker",
    "cloud",
    "web-development"
